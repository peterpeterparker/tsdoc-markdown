{
  "root": true,
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": [
    "**/dist/",
    "jest.config.js",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/mock.ts",
    "bin/index.js"
  ],
  "rules": {
    "@typescript-eslint/consistent-type-imports": "error"
  }
}
