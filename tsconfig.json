{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "isolatedModules": true,
  },
  "include": ["src/lib/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/mock.ts",
    "src/**/mock.json",
    "src/test/**/*"
  ]
}
